<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="."
        android:id="@+id/dotButton"
        android:clickable="true"
        android:onClick="dotButton"
        android:textColor="#2c8b26"
        android:layout_gravity="bottom|right"
        android:layout_alignBaseline="@+id/zeroButton"
        android:layout_alignBottom="@+id/zeroButton"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/zeroButton"
        android:clickable="true"
        android:onClick="zeroButton"
        android:textColor="#2527c8"
        android:layout_gravity="bottom|right"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/dotButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        android:id="@+id/equalsButton"
        android:clickable="true"
        android:onClick="equalsButton"
        android:textColor="#2c8b26"
        android:layout_gravity="bottom|right"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/zeroButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:id="@+id/oneButton"
        android:clickable="true"
        android:onClick="oneButton"
        android:textColor="#2527c8"
        android:layout_gravity="bottom|right"
        android:layout_alignTop="@+id/twoButton"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:id="@+id/twoButton"
        android:clickable="true"
        android:onClick="twoButton"
        android:textColor="#2527c8"
        android:layout_gravity="bottom|right"
        android:layout_alignTop="@+id/threeButton"
        android:layout_toEndOf="@+id/dotButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:id="@+id/threeButton"
        android:clickable="true"
        android:onClick="threeButton"
        android:textColor="#2527c8"
        android:layout_gravity="bottom|right"
        android:layout_above="@+id/zeroButton"
        android:layout_toEndOf="@+id/zeroButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/plusButton"
        android:clickable="true"
        android:onClick="plusButton"
        android:textColor="#7c5810"
        android:layout_gravity="bottom|right"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/minusButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/minusButton"
        android:clickable="true"
        android:onClick="minusButton"
        android:textColor="#7c5810"
        android:layout_gravity="bottom|right"
        android:layout_below="@+id/multButton"
        android:layout_alignStart="@+id/multButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:id="@+id/foutButton"
        android:clickable="true"
        android:onClick="fourButton"
        android:textColor="#2527c8"
        android:layout_gravity="bottom|right"
        android:layout_below="@+id/sevenButton"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:id="@+id/sevenButton"
        android:clickable="true"
        android:onClick="sevenButton"
        android:textColor="#2527c8"
        android:layout_gravity="bottom|right"
        android:layout_alignTop="@+id/eightButton"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:id="@+id/fiveButton"
        android:clickable="true"
        android:onClick="fiveButton"
        android:textColor="#2527c8"
        android:layout_gravity="bottom|right"
        android:layout_above="@+id/oneButton"
        android:layout_toStartOf="@+id/sixButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:id="@+id/sixButton"
        android:clickable="true"
        android:onClick="sixButton"
        android:textColor="#2527c8"
        android:layout_gravity="bottom|right"
        android:layout_above="@+id/threeButton"
        android:layout_toEndOf="@+id/twoButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:id="@+id/eightButton"
        android:clickable="true"
        android:onClick="eightButton"
        android:textColor="#2527c8"
        android:layout_gravity="bottom|right"
        android:layout_alignTop="@+id/nineButton"
        android:layout_toEndOf="@+id/sevenButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:id="@+id/nineButton"
        android:clickable="true"
        android:onClick="nineButton"
        android:textColor="#2527c8"
        android:layout_gravity="bottom|right"
        android:layout_above="@+id/sixButton"
        android:layout_alignStart="@+id/sixButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x"
        android:id="@+id/multButton"
        android:clickable="true"
        android:onClick="multButton"
        android:textColor="#7c5810"
        android:layout_gravity="bottom|right"
        android:layout_below="@+id/nineButton"
        android:layout_toEndOf="@+id/sixButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:id="@+id/divideButton"
        android:clickable="true"
        android:onClick="divButton"
        android:textColor="#7c5810"
        android:layout_gravity="bottom|right"
        android:layout_alignTop="@+id/nineButton"
        android:layout_toEndOf="@+id/nineButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DEL"
        android:id="@+id/deleteButton"
        android:clickable="true"
        android:onClick="deleteButton"
        android:textColor="#2c8b26"
        android:layout_above="@+id/divideButton"
        android:layout_alignStart="@+id/divideButton"
        android:layout_alignEnd="@+id/divideButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/displayAns"
        android:gravity="right"
        android:layout_above="@+id/errBox"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/errBox"
        android:textColor="#ff0000"
        android:text="ERROR"
        android:gravity="center"
        android:textStyle="bold|italic"
        android:visibility="invisible"
        android:layout_above="@+id/deleteButton"
        android:layout_alignStart="@+id/deleteButton"
        android:layout_alignEnd="@+id/deleteButton" />
</RelativeLayout>
